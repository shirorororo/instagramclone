<div class="container">
  <p>Title: <%= @post.title %></p>
  <p><%= image_tag @post.image %></p>
  <p>Content: <%= @post.content %></p>
  <p>Posted by <%= @post.user.name %></p>
  <ul class="row">
  <% unless @post.user_id == current_user.id %>
    <% if @favorite.present? %>
      <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
    <% else %>
      <%= link_to 'お気に入りする', favorites_path(post_id: @post.id), method: :post, class: 'btn btn-primary' %>
    <% end %>
  <% end %>

  <% if @post.user_id == current_user.id %>
    <li class="col-sm-6 col-md-4"><%= link_to '編集', edit_post_path(@post.id), data: { confirm: '本当に編集していいですか？' }, class: 'btn btn-info' %>　　　<%= link_to '削除', post_path(@post.id), method: :delete ,data: { confirm: '本当に削除していいですか？' }, class: 'btn btn-danger' %></li> 
    <% else %>　
  <% end %>
  <br><br>
  <%= link_to "戻る", :back %>
  </ul>
</div>